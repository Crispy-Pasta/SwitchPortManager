# Development Build - Dell Port Tracer
# Optimized for development with debugging tools and hot reload
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV ENVIRONMENT=development
ENV FLASK_DEBUG=1

# Install system dependencies including development tools
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    libpq-dev \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt .

# Install Python dependencies + development tools
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pytest pytest-cov flake8 ipython

# Create app user for security
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app

# Create directories for logs, data, and database
RUN mkdir -p /app/logs /app/static/img /app/instance \
    && chown -R app:app /app/logs /app/static /app/instance

# Copy essential application files
COPY --chown=app:app *.py ./
COPY --chown=app:app app/ ./app/
COPY --chown=app:app static/ ./static/
COPY --chown=app:app templates/ ./templates/
COPY --chown=app:app docker-entrypoint.sh ./

# Copy optional directories if they exist in the repository
COPY --chown=app:app tools/ ./tools/
COPY --chown=app:app docs/ ./docs/

# Copy tests for development (if they exist)
COPY --chown=app:app tests/ ./tests/

# Fix line endings and make entrypoint script executable
RUN sed -i 's/\r$//' docker-entrypoint.sh && \
    chmod +x docker-entrypoint.sh && \
    chown -R app:app /app

# Switch to non-root user
USER app

# Expose port
EXPOSE 5000

# Health check with more relaxed timing for dev
HEALTHCHECK --interval=60s --timeout=15s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Run the application in development mode
CMD ["./docker-entrypoint.sh"]
