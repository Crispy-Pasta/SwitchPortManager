# .env.production
# Database Configuration
POSTGRES_DB=dell_port_tracer_prod
POSTGRES_USER=dell_tracer_user
POSTGRES_PASSWORD=SecureDbPassword123!

# Switch Credentials (update with your actual credentials)
SWITCH_USERNAME=your_switch_username
SWITCH_PASSWORD=your_switch_password

# Windows Authentication (if used)
USE_WINDOWS_AUTH=true
AD_SERVER=ldap://your-domain-controller.com
AD_DOMAIN=yourdomain.com
AD_BASE_DN=DC=yourdomain,DC=com

# Application User Passwords (update these!)
OSS_PASSWORD=SecureOssPassword123!
NETADMIN_PASSWORD=SecureNetAdminPassword123!
SUPERADMIN_PASSWORD=SecureSuperAdminPassword123!

# Security
SECRET_KEY=your_very_long_and_secure_secret_key_here_change_this_in_production

# Optional: Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
